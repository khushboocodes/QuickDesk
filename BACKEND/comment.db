{
  "name": "Comment",
  "type": "object",
  "properties": {
    "ticket_id": {
      "type": "string",
      "description": "Reference to ticket"
    },
    "content": {
      "type": "string",
      "description": "Comment content"
    },
    "author_email": {
      "type": "string",
      "description": "Email of comment author"
    },
    "author_name": {
      "type": "string",
      "description": "Name of comment author"
    },
    "is_internal": {
      "type": "boolean",
      "default": false,
      "description": "Internal note visible only to agents"
    },
    "attachment_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "URLs of attached files"
    }
  },
  "required": [
    "ticket_id",
    "content"
  ]
}